@page
@model RazorShoesProject.Pages.OrderItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OrderItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Sale Price</label>
                <input asp-for="OrderItem.SalePrice" class="form-control" />
                <span asp-validation-for="OrderItem.SalePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Order Item</label>
                <input asp-for="OrderItem.Quantity" class="form-control" />
                <span asp-validation-for="OrderItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Size</label>
                <input asp-for="OrderItem.Size" class="form-control" />
                <span asp-validation-for="OrderItem.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Shoe</label>
                <select asp-for="OrderItem.ShoeId" class ="form-control" asp-items="ViewBag.ShoeId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Order</label>
                <select asp-for="OrderItem.OrderId" class ="form-control" asp-items="ViewBag.OrderId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
