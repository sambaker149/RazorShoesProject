@page
@model RazorShoesProject.Pages.Images.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Image</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Image.ImageId" />
            <div class="form-group">
                <label class="control-label">Image URL</label>
                <input asp-for="Image.ImageUrl" class="form-control" />
                <span asp-validation-for="Image.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Shoe</label>
                <select asp-for="Image.ShoeId" class="form-control" asp-items="ViewBag.ShoeId"></select>
                <span asp-validation-for="Image.ShoeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
