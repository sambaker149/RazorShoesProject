@page
@model IndexModel
@{
    ViewData["Title"] = "Homepage";
}


<header class="pt-5">
    <div class="container pt-4 pt-xl-5">
        <div class="row pt-5">
            <div class="col-md-8 text-center text-md-start mx-auto">
                <div class="text-center">
                    <h1 class="display-4 fw-bold"><span style="background-color: rgb(0, 0, 0);">&nbsp;RAZOR SHOES&nbsp;</span></h1>
                    <p class="fs-5 text-muted mt-5">Search our Extensive Range!</p>
                    <form asp-page="/Shoe" class="d-flex justify-content-center flex-wrap" method="get">
                        <div class="shadow-lg mb-3"><input class="form-control" type="text" name="searchString" placeholder="Search Our Range!"></div>
                        <div class="shadow-lg mb-3"><button class="btn btn-primary" type="submit">Search</button></div>
                        <div class="col-12 col-lg-10 d-inline-block float-end mx-auto">
                            <div class="text-center position-relative"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>
<br /><br />
    <br /><br />
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">View Our Range</h1>
            <p class="lead text-muted">The Hottest Shoes!</p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var shoe in Model.Shoes)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img src="@Url.Content(shoe.Images[0].ImageUrl)" class="card-img-top" style="width:345px; height:240px; position:relative;">
                            <div class="card-body">
                                <h4 class="card-text">@shoe.Name</h4>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="button" asp-route-id="@shoe.ShoeId" asp-page="/Details" class="btn btn-sm btn-outline-secondary">View More Details</a>
                                        <a type="button" asp-route-id="@shoe.ShoeId" asp-page="/Order" class="btn btn-sm btn-outline-secondary">Buy This Shoe</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
<div class="button" style="right:150px;position:absolute;">
<p>
        <a href="/Shoes" class="btn btn-primary my-4" style="left:100px;right:100px; background-color: rgb(2, 62, 115)">All Our Shoes</a>
    </p>
</div>
<br /><br />