@page
@model RazorShoesProject.Pages.Payments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CardPayment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Payment.PaymentId" />
            <div class="form-group">
                <label class="control-label">Card Number</label>
                <input asp-for="Payment.CardNumber" class="form-control" />
                <span asp-validation-for="Payment.CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CVV Number</label>
                <input asp-for="Payment.CVVNumber" class="form-control" />
                <span asp-validation-for="Payment.CVVNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Expiry Date</label>
                <input asp-for="Payment.ExpiryDate" class="form-control" />
                <span asp-validation-for="Payment.ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}