@page
@model RazorShoesProject.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <div class="form-group">
                <label class="control-label">Planned Delivery</label>
                <input asp-for="Order.PlannedDelivery" class="form-control" />
                <span asp-validation-for="Order.PlannedDelivery" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Actual Delivery</label>
                <input asp-for="Order.ActualDelivery" class="form-control" />
                <span asp-validation-for="Order.ActualDelivery" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Order Status</label>
                <input asp-for="Order.OrderStatus" class="form-control" />
                <span asp-validation-for="Order.OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Customer</label>
                <select asp-for="Order.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Order.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Payment Details</label>
                <select asp-for="Order.PaymentId" class="form-control" asp-items="ViewBag.PaymentId"></select>
                <span asp-validation-for="Order.PaymentId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Order.IsPaid" /> @Html.DisplayNameFor(model => model.Order.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
